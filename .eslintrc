{
  "parser": "@typescript-eslint/parser",
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier",
  ],
  "plugins": ["@typescript-eslint", "prettier"],
  "rules": {
    "prettier/prettier": "error",
  },
  "env": {
    "node": true,
    "jest": true,
  },
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "rules": {
        "prettier/prettier": [
          "error",
          {
            "singleQuote": true,
            "trailingComma": "all",
            "printWidth": 80,
            "arrowParens": "always",
            "endOfLine": "lf",
          },
        ],
      },
    },
  ],
}
